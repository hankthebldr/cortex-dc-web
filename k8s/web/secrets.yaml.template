# Kubernetes Secrets Template for Cortex DC Web
# Copy this file to secrets.yaml and replace placeholder values
# DO NOT commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: web-secrets
  namespace: cortex-dc
  labels:
    app: cortex-web
    component: frontend
type: Opaque
stringData:
  # Firebase Configuration (if using Firebase backend)
  NEXT_PUBLIC_FIREBASE_API_KEY: "YOUR_FIREBASE_API_KEY"
  NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN: "YOUR_PROJECT.firebaseapp.com"
  NEXT_PUBLIC_FIREBASE_PROJECT_ID: "YOUR_PROJECT_ID"
  NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET: "YOUR_PROJECT.appspot.com"
  NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID: "YOUR_SENDER_ID"
  NEXT_PUBLIC_FIREBASE_APP_ID: "YOUR_APP_ID"

  # API Keys
  GOOGLE_GENAI_API_KEY: "YOUR_GENAI_API_KEY"
  OPENAI_API_KEY: "YOUR_OPENAI_API_KEY"

  # Authentication
  JWT_SECRET: "YOUR_JWT_SECRET_MIN_32_CHARS"
  SESSION_SECRET: "YOUR_SESSION_SECRET_MIN_32_CHARS"

  # Database Connection (if using self-hosted)
  DATABASE_URL: "postgresql://user:password@postgres:5432/cortex"
  REDIS_URL: "redis://redis:6379"

  # External Services
  BIGQUERY_PROJECT_ID: "YOUR_BIGQUERY_PROJECT"
  XSIAM_API_KEY: "YOUR_XSIAM_API_KEY"

---
# GCP Service Account Secret (for Firebase/GCP integration)
apiVersion: v1
kind: Secret
metadata:
  name: web-gcp-credentials
  namespace: cortex-dc
  labels:
    app: cortex-web
    component: frontend
type: Opaque
data:
  # Base64 encoded GCP service account JSON
  # Generate with: cat service-account.json | base64
  key.json: BASE64_ENCODED_SERVICE_ACCOUNT_JSON
