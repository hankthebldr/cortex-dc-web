{
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects=\"Unit Tests\"",
    "test:integration": "jest --selectProjects=\"Integration Tests\"",
    "test:critical": "jest --selectProjects=\"Critical Path Tests\"",
    "test:e2e": "jest --selectProjects=\"E2E Tests\"",
    "test:firebase": "npm run test:critical && npm run test:integration",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "emulators:start": "firebase emulators:start --only firestore,storage,functions --project=cortex-dc-test",
    "emulators:export": "firebase emulators:export ./firebase-export --project=cortex-dc-test",
    "emulators:import": "firebase emulators:start --import=./firebase-export --project=cortex-dc-test",
    "test:with-emulators": "concurrently \"npm run emulators:start\" \"wait-on tcp:8080 && npm run test:firebase\"",
    "validate:firebase": "firebase projects:list && firebase use cortex-dc-test",
    "test:validate": "npm run validate:firebase && npm run test:critical"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "ts-jest": "^29.1.2",
    "firebase-admin": "^12.0.0",
    "firebase": "^10.8.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ]
  }
}