# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript/JavaScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
end_of_line = lf

# Makefiles require tabs
[Makefile]
indent_style = tab

# Docker
[Dockerfile*]
indent_size = 2

# Python (for scripts)
[*.py]
indent_size = 4

# SQL
[*.sql]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2
