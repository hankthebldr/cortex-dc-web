# Cortex DC Web - Production Environment
# These values should be set in your deployment environment

#============================================
# Backend API Configuration
#============================================
NEXT_PUBLIC_API_URL=https://api.cortex-dc.henryreed.ai
NEXT_PUBLIC_API_TIMEOUT=30000

#============================================
# Firebase Configuration (Auth Only)
#============================================
NEXT_PUBLIC_FIREBASE_API_KEY=${FIREBASE_API_KEY}
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=cortex-dc-portal.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=cortex-dc-portal
NEXT_PUBLIC_FIREBASE_APP_ID=${FIREBASE_APP_ID}
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=${FIREBASE_MEASUREMENT_ID}

#============================================
# Feature Flags
#============================================
NEXT_PUBLIC_USE_BACKEND_API=true
NEXT_PUBLIC_USE_EMULATOR=false
NEXT_PUBLIC_ENABLE_MOCK_AUTH=false

#============================================
# Application Configuration
#============================================
NEXT_PUBLIC_APP_NAME=Cortex DC
NEXT_PUBLIC_APP_URL=https://cortex-dc.henryreed.ai
NEXT_PUBLIC_ENVIRONMENT=production

#============================================
# Analytics & Monitoring
#============================================
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN}
NEXT_PUBLIC_GA_ID=${GA_ID}

#============================================
# Okta SSO Configuration (Optional)
#============================================
# Option 1: Okta SAML (Enterprise SSO)
# Configure SAML provider in Firebase Console first
NEXT_PUBLIC_OKTA_SAML_PROVIDER_ID=${OKTA_SAML_PROVIDER_ID}

# Option 2: Okta OAuth 2.0
# NEXT_PUBLIC_OKTA_CLIENT_ID=${OKTA_CLIENT_ID}

#============================================
# Feature Toggles
#============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_POV_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_TRR_WORKFLOWS=true
NEXT_PUBLIC_ENABLE_CONTENT_LIBRARY=true
