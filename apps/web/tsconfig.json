{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@cortex/utils": ["../../packages/utils/src"],
      "@cortex/utils/*": ["../../packages/utils/src/*"],
      "@cortex/db": ["../../packages/db/src"],
      "@cortex/db/*": ["../../packages/db/src/*"],
      "@cortex/ai": ["../../packages/ai/src"],
      "@cortex/ai/*": ["../../packages/ai/src/*"],
      "@cortex/content": ["../../packages/content/src"],
      "@cortex/content/*": ["../../packages/content/src/*"],
      "@cortex/commands": ["../../packages/commands/src"],
      "@cortex/commands/*": ["../../packages/commands/src/*"],
      "@cortex/integrations": ["../../packages/integrations/src"],
      "@cortex/integrations/*": ["../../packages/integrations/src/*"],
      "@cortex/terminal": ["../../packages/terminal/src"],
      "@cortex/terminal/*": ["../../packages/terminal/src/*"],
      "@cortex-dc/ui": ["../../packages/ui/src"],
      "@cortex-dc/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
