# Cortex DC Web - Production Environment Template
# This file contains production configuration examples
# Actual values should be stored in Google Secret Manager

#============================================
# Server Configuration
#============================================
NODE_ENV=production
PORT=8080

#============================================
# GCP Configuration
#============================================
GCP_PROJECT_ID=cortex-dc-portal
GCP_REGION=us-central1
# Use Workload Identity in production (no service account key)

#============================================
# Database Configuration
#============================================
DATABASE_TYPE=firestore
FIRESTORE_PROJECT_ID=cortex-dc-portal
FIRESTORE_DATABASE_ID=(default)

#============================================
# Storage Configuration
#============================================
STORAGE_PROVIDER=gcs
STORAGE_BUCKET=cortex-dc-production-storage
STORAGE_CDN_URL=https://storage.googleapis.com/cortex-dc-production-storage
STORAGE_MAX_FILE_SIZE=52428800

#============================================
# Authentication Configuration
#============================================
AUTH_PROVIDER=firebase
AUTH_DOMAIN=cortex-dc.henryreed.ai
AUTH_PROJECT_ID=cortex-dc-portal
# Secrets from Google Secret Manager:
# - jwt-secret
# - session-secret

#============================================
# API Configuration
#============================================
API_BASE_URL=https://api.cortex-dc.henryreed.ai
API_TIMEOUT=30000
API_RATE_LIMIT=200
CORS_ORIGINS=https://cortex-dc.henryreed.ai
CORS_CREDENTIALS=true

#============================================
# Frontend Configuration
#============================================
NEXT_PUBLIC_API_URL=https://api.cortex-dc.henryreed.ai
NEXT_PUBLIC_AUTH_DOMAIN=cortex-dc.henryreed.ai
NEXT_PUBLIC_STORAGE_CDN_URL=https://storage.googleapis.com/cortex-dc-production-storage
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENVIRONMENT=production

#============================================
# AI Services Configuration
#============================================
# Secrets from Google Secret Manager:
# - gemini-api-key
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7

#============================================
# BigQuery Configuration
#============================================
BIGQUERY_PROJECT_ID=cortex-dc-portal
BIGQUERY_DATASET=cortex_analytics_prod
BIGQUERY_LOCATION=US
BIGQUERY_ENABLE_CACHE=true

#============================================
# Monitoring & Logging
#============================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
# Secrets from Google Secret Manager:
# - sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.05

#============================================
# Feature Flags
#============================================
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_BIGQUERY_EXPORT=true
ENABLE_XSIAM_INTEGRATION=true
ENABLE_CONTENT_LIBRARY=true
ENABLE_POV_MANAGEMENT=true
ENABLE_TRR_WORKFLOWS=true

#============================================
# Security Configuration
#============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
CSRF_ENABLED=true
CSP_ENABLED=true

#============================================
# Production Tools
#============================================
DEBUG=false
ENABLE_SWAGGER_UI=false
ENABLE_GRAPHQL_PLAYGROUND=false
